<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="src" format="reference"/>
    <attr name="title" format="string"/>
    <attr name="subtitle" format="string"/>

    <declare-styleable name="IllustrationView">
        <attr name="src"/>
        <attr name="title"/>
        <attr name="subtitle"/>
    </declare-styleable>

    <declare-styleable name="ProgressConstraintLayout">
        <attr name="src"/>
        <attr name="title"/>
        <attr name="subtitle"/>
        <attr name="progressVisibility" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RubikTextView">
        <attr name="typography" format="enum">
            <enum name="h1" value="0"/>
            <enum name="h2" value="1"/>
            <enum name="h3" value="2"/>
            <enum name="h4" value="3"/>
            <enum name="h5" value="4"/>
            <enum name="h6" value="5"/>
            <enum name="subtitle_1" value="6"/>
            <enum name="subtitle_2" value="7"/>
            <enum name="body_1" value="8"/>
            <enum name="body_2" value="9"/>
            <enum name="button" value="10"/>
            <enum name="caption" value="11"/>
            <enum name="overline" value="12"/>
        </attr>
    </declare-styleable>
</resources>